#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <unistd.h>

#define MAXLINE 511

char *EXIT_STRING = "exit"; // ì¢…ë£Œ ë¬¸ì ì •ì˜

int recv_and_print(int sd, struct sockaddr_in* servaddr); // ìƒëŒ€ë¡œë¶€í„° ë©”ì‹œì§€ ìˆ˜ì‹  í›„ í™”ë©´ ì¶œë ¥
int input_and_send(int sd, struct sockaddr_in* servaddr); // í‚¤ë³´ë“œ ì…ë ¥ë°›ê³  ìƒëŒ€ì—ê²Œ ë©”ì‹œì§€ ì „ë‹¬

int main(int argc, char *argv[]) {
	pid_t pid;
	static int s;
	static struct sockaddr_in servaddr;

	// ëª…ë ¹ë¬¸ ì…ë ¥ ì¸ì ì²˜ë¦¬
	if(argc != 3) {
		printf("ì‚¬ìš©ë²•: %s server_ip port\n", argv[0]);
		exit(0);
	}

	// ì†Œì¼“ ìƒì„±
	if((s = socket(PF_INET, SOCK_DGRAM, 0)) < 0) {
		printf("Client: Can't open dgram socket.\n");
		exit(0);
	}

	// servaddrì„ '0'ìœ¼ë¡œ ì´ˆê¸°í™”
	bzero((char *)&servaddr, sizeof(servaddr));

	// servaddr ì„¸íŒ…
	servaddr.sin_family = AF_INET;
	inet_pton(AF_INET, argv[1], &servaddr.sin_addr);
	servaddr.sin_port = htons(atoi(argv[2]));

	if((pid = fork()) > 0) { // ë¶€ëª¨ í”„ë¡œì„¸ìŠ¤
		input_and_send(s, &servaddr);
	} else if(pid == 0) { // ìì‹ í”„ë¡œì„¸ìŠ¤
		recv_and_print(s, &servaddr);
	}

	close(s);

	return 0;
}

// í‚¤ë³´ë“œ ì…ë ¥ë°›ê³  ìƒëŒ€ì—ê²Œ ë©”ì‹œì§€ ì „ë‹¬
int input_and_send(int sd, struct sockaddr_in *servaddr) {
	char buf[MAXLINE + 1];
	int nbyte, addrlen = sizeof(struct sockaddr_in);

	while(fgets(buf, sizeof(buf), stdin) != NULL) {
		nbyte = strlen(buf);
		if(sendto(sd, buf, strlen(buf), 0, (struct sockaddr *)servaddr, addrlen) < 0)
			perror("sendto fail\n");

		// ì¢…ë£Œ ë¬¸ìì—´ ì…ë ¥ ì²˜ë¦¬
		if(strstr(buf, EXIT_STRING) != NULL) {
			puts("Good Bye!");
			close(sd);
			exit(0);
		}
	}

	return 0;
}

// ìƒëŒ€ë¡œë¶€í„° ë©”ì‹œì§€ ìˆ˜ì‹  í›„ í™”ë©´ ì¶œë ¥
int recv_and_print(int sd, struct sockaddr_in *servaddr) {
	char buf[MAXLINE + 1];
	int nbyte, addrlen = sizeof(struct sockaddr_in);

	while(1) {
		if((nbyte = recvfrom(sd, buf, MAXLINE, 0, (struct sockaddr *)servaddr, &addrlen)) < 0) {
			perror("read fail");
			close(sd);
			exit(0);
		}

		buf[nbyte] = 0;

		// ì¢…ë£Œ ë¬¸ìì—´ ìˆ˜ì‹  ì‹œ ì¢…ë£Œ
		if(strstr(buf, EXIT_STRING) != NULL) {
			break;
		}

		printf("%s", buf); // í™”ë©´ ì¶œë ¥
	}

	return 0;
}
