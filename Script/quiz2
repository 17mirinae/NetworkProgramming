int main(int argc, char *argv[]) {
	struct sockaddr_in cliaddr, servaddr;
	int s;
	pid_t pid;

	// ì‚¬ìš©ë²• ì¶œë ¥
	if(argc != 2) {
		printf("ì‚¬ìš©ë²•: %s port\n", argv[0]);
		exit(0);
	}

	// ì†Œì¼“ ìƒì„±
	if((s = socket(PF_INET, SOCK_DGRAM, 0)) < 0) {
		perror("socket fail\n");
		exit(0);
	}

	// ì„œë²„ì˜ ì†Œì¼“ ì£¼ì†Œ êµ¬ì¡°ì²´ servadrì„ '0'ìœ¼ë¡œ ì´ˆê¸°í™”
	// í´ë¼ì´ì–¸íŠ¸ë„ ê°™ì´ ì´ˆê¸°í™”
	bzero((char *)&servaddr, sizeof(servaddr));
	bzero((char *)&cliaddr, sizeof(cliaddr));

	// servaddrì„ ì„¸íŒ…
	servaddr.sin_family = AF_INET;
	servaddr.sin_addr.s_addr = htonl(INADDR_ANY);
	servaddr.sin_port = htons(atoi(argv[1]));

	puts("ì„œë²„ê°€ í´ë¼ì´ì–¸íŠ¸ë¥¼ ê¸°ë‹¤ë¦¬ê³  ìˆìŠµë‹ˆë‹¤.");

	if(bind(s, (struct sockaddr *)&servaddr, sizeof(servaddr)) < 0) {
		perror("bind fail\n");
		exit(0);
	}

	recv_and_print(s, &cliaddr);

	puts("í´ë¼ì´ì–¸íŠ¸ê°€ ì—°ê²°ë˜ì—ˆìŠµë‹ˆë‹¤.");

	if((pid = fork()) > 0) {
		input_and_send(s, &cliaddr); // í‚¤ë³´ë“œ ì…ë ¥ë°›ê³  ìƒëŒ€ì—ê²Œ ë©”ì‹œì§€ ì „ë‹¬
